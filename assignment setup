#basic skeleton for class assignment

import hikari
import lightbulb


@bot.command
@lightbulb.option('duedate', 'Date assignment is due', type=datetime.datetime)
@lightbulb.option('assignment', 'Assignment to be notified of')
@lightbulb.option('section', 'Class of assignment to be notified from', type=hikari.Role)
@lightbulb.command('addassn', 'Adds assignment to be notified of')
@lightbulb.implements(lightbulb.SlashCommand)
async def addassn(ctx):
    await ctx.respond(f'Noted, {ctx.options.assignment} is due on {ctx.options.duedate} for {ctx.options.section}')
#bot.run()
